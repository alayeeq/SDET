package patternproblem;

import org.junit.Test;

public class CharacterDiamond {
	
	
	
	@Test
	 public void Test1() {
		
		char Character_upto = 'F';
		
		print_char_diamonnd(Character_upto);
		
		
	}

	private void print_char_diamonnd(char character_upto) {
		// TODO Auto-generated method stub
		
		
		char Start_char = 'A';
		char End_char = character_upto;
		int number_of_rows =0;
		int number_of_columns = 0;
		for (int start = (int)Start_char; start <=(int)End_char ; start++ ) {
			
			if (start <=(int)Start_char) number_of_columns = (int)Start_char;
			else number_of_columns = (int)Start_char +1;
			
			
			for (int columns = 0; columns <number_of_columns; columns++) {
				
				System.out.println(" "+(char)start);
				
			}
			
			
			
		}
		
		
	}
	

}
