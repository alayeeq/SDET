package removeElement;

import java.util.Arrays;

public class TestOne {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int [] a = {1,3,5,2,3,-3,5,-5,3,0};
		int target = 3;
		int [] out =  ReturnRemovedArray( a ,  target);
		for (int i =0 ; i<out.length ; i++) {
			
			
			System.out.print(out[i]);
		}
		System.out.println();
		
		
		int [] out2 =  ReturnRemovedArray2( a ,  target);
		for (int i =0 ; i<out2.length ; i++) {
			
			
			System.out.print(out2[i]);
		}
		System.out.println();
		
		
		int [] out3 =  ReturnRemovedArray3( a ,  target);
		for (int i =0 ; i<out3.length ; i++) {
			
			
			System.out.print(out3[i]);
		}
		System.out.println();
		
	}
	
	
	private static int[] ReturnRemovedArray(int[] a, int target) {
		// TODO Auto-generated method stub
		int left = 0;
		int right =0;
		for ( right =0; right <a.length ; right++) {
			
			if (a[left]!=target) {

				left++;
			}
			
			else if (a[left]==target) {
				
				if (a[right] == target ) {
					
					
				}
				
				else if (a[right] != target) {
					
					int temp = a[right];
					a[right] = a[left];
					a[left++] = temp;
					
					
					
				}
			}
			
		}
		return a;
		//return Arrays.copyOf(a, left);
		 
		
	}
	
	
	private static int[] ReturnRemovedArray2(int[] a, int target) {
		// TODO Auto-generated method stub
		int left = 0;
		//int right =0;
		for (int right =0; right <a.length ; right++) {
			
			if (a[right]!=target) {

				int temp = a[right];
				a[right] = a[left];
				a[left++] = temp;
			}
			
			
			
		}
		
		//return Arrays.copyOf(a, left);
		return a;
		 
		
	}
	
	private static int[] ReturnRemovedArray3(int[] a, int target) {
		// TODO Auto-generated method stub
		int left = 0;
		//int right =0;
		for (int right =0; right <a.length ; right++) {
			
			if (a[right]!=target) {


				a[left++] = a[right];
			}
			
			
			
		}
		
		//return Arrays.copyOf(a, left);
		return a;
		 
		
	}
	

}
