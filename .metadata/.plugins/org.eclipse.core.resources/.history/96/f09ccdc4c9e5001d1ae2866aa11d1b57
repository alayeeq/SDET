package patternproblem;

import org.junit.Test;

public class CharacterDiamond {
	
	
	
	@Test
	 public void Test1() {
		
		char Character_upto = 'F';
		
		print_char_diamonnd(Character_upto);
		
		
	}

	private void print_char_diamonnd(char character_upto) {
		// TODO Auto-generated method stub
		
		
		char Start_char = 'A';
		char End_char = character_upto;
		int space_limit =0;
		int column_limit = 0;
		int row_limit = 0;
		int center_spact_limit = 0;
		
		
		
		for (int start = (int)Start_char; start <=(int)End_char ; start++ ) {
			
			
			
			
			if (start <=(int)Start_char) column_limit = 1;
			else column_limit = 2;
			
			if(start <=(int)End_char) space_limit = (int)End_char - start;
			
			if(start <=(int)End_char) center_spact_limit =  start -(int)Start_char;
			
			for (int spaces = 0; spaces <space_limit; spaces++) {
				
				System.out.print(" ");
				
			}
			
			
			for (int columns = 0; columns <column_limit; columns++) {
				
				System.out.print(" "+(char)start);
				
				for (int spaces = 0; spaces <center_spact_limit; spaces++) {
					
					System.out.print(" ");
				
			}
			

				
			}
			
			System.out.println();
			}
			
			
		
			
		}
		
		
	}
	


